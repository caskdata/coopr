<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>standalone</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>coopr-${project.version}-standalone</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/../provisioner</directory>
            <outputDirectory>/provisioner</outputDirectory>
                <excludes>
                    <exclude>**/provisioner-site.xml</exclude>
                </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../ui</directory>
            <outputDirectory>/ui</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../server/target</directory>
            <outputDirectory>/server/lib</outputDirectory>
            <includes>
                <include>*-jar-with-dependencies.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../docs/licenses</directory>
            <outputDirectory>/licenses</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../bin</directory>
            <outputDirectory>/bin</outputDirectory>
            <includes>
                <include>*.sh</include>
                <include>data-uploader*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../standalone/bin</directory>
            <outputDirectory>/bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../standalone/server/conf</directory>
            <outputDirectory>/server/conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../config/defaults</directory>
            <outputDirectory>/server/config/defaults</outputDirectory>
        </fileSet>
    </fileSets>
        <files>
            <file>
                <source>${project.basedir}/../standalone/provisioner/master/conf/provisioner-site.xml</source>
                <outputDirectory>/provisioner/master/conf</outputDirectory>
            </file>
            <file>
                <source>${project.basedir}/../standalone/README.md</source>
                <outputDirectory>/</outputDirectory>
            </file>
            <file>
                <source>${project.basedir}/../LICENSE</source>
                <outputDirectory>/</outputDirectory>
            </file>
        </files>
</assembly>
