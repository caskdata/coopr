{
  "name": "mysql-server",
  "description": "MySQL Server",
  "dependencies": {
    "runtime": {
      "requires": [ "base" ]
    }
  },
  "provisioner": {
    "actions": {
      "install": {
        "type":"chef-solo",
        "fields": {
          "run_list": "recipe[mysql::server]"
        }
      },
      "configure": {
        "type": "chef-solo",
        "fields": {
          "run_list": "recipe[mysql::server]"
        }
      },
      "start": {
        "type": "chef-solo",
        "fields": {
          "run_list": "recipe[mysql::server],recipe[coopr_service_runner::default]",
          "json_attributes": "{\"coopr\": { \"node\": { \"services\": { \"mysql\": \"start\" } } } }" 
        }
      },
      "stop": {
        "type": "chef-solo",
        "fields": {
          "run_list": "recipe[mysql::server],recipe[coopr_service_runner::default]",
          "json_attributes": "{\"coopr\": { \"node\": { \"services\": { \"mysql\": \"stop\" } } } }" 
        }
      }
    }
  }
}
