{
  "name": "hbase-master",
  "description": "HBase Master",
  "dependencies": {
    "runtime": {
      "requires": [ 
        "base",
        "hadoop-hdfs-namenode",
        "hadoop-hdfs-datanode",
        "zookeeper-server"
      ]
    }
  },
  "provisioner": {
    "actions": {
      "install": {
        "type":"chef-solo",
        "fields": {
          "run_list": "recipe[hadoop::hbase_master]"
        }
      },
      "configure": {
        "type": "chef-solo",
        "fields": {
          "run_list": "recipe[hadoop_wrapper::default],recipe[hadoop::hbase]"
        }
      },
      "initialize": {
        "type": "chef-solo",
        "fields": {
          "run_list": "recipe[hadoop_wrapper::hbase_master_init]"
        }
      },
      "start": {
        "type": "chef-solo",
        "fields": {
          "run_list": "recipe[hadoop_wrapper::default],recipe[hadoop::hbase_master],recipe[coopr_service_runner::default]",
          "json_attributes": "{\"coopr\": { \"node\": { \"services\": { \"hbase-master\": \"start\" } } } }" 
        }
      },
      "stop": {
        "type": "chef-solo",
        "fields": {
          "run_list": "recipe[hadoop_wrapper::default],recipe[hadoop::hbase_master],recipe[coopr_service_runner::default]",
          "json_attributes": "{\"coopr\": { \"node\": { \"services\": { \"hbase-master\": \"stop\" } } } }" 
        }
      }
    }
  }
}
