{
  "name": "haproxy",
  "description": "HAproxy software load balancer",
  "dependencies": {
    "conflicts": [],
    "install": {
      "requires": [ "base" ],
      "uses": []
    },
    "provides": [],
    "runtime": {
      "requires": [],
      "uses": []
    }
  },
  "provisioner": {
    "actions": {
      "install": {
        "type":"chef-solo",
        "fields": {
          "run_list": "recipe[haproxy2::default]"
        }
      },
      "configure": {
        "type": "chef-solo",
        "fields": {
          "run_list": "recipe[haproxy2::default]"
        }
      },
      "start": {
        "type": "chef-solo",
        "fields": {
          "run_list": "recipe[haproxy2::default],recipe[coopr_service_runner::default]",
          "json_attributes": "{\"coopr\": { \"node\": { \"services\": { \"haproxy\": \"start\" } } } }" 
        }
      },
      "stop": {
        "type": "chef-solo",
        "fields": {
          "run_list": "recipe[haproxy2::default],recipe[coopr_service_runner::default]",
          "json_attributes": "{\"coopr\": { \"node\": { \"services\": { \"haproxy\": \"stop\" } } } }" 
        }
      }
    }
  }
}
